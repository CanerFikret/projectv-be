{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": false
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../prisma",
        "outDir": "dist/prisma"
      },
      {
        "include": "**/*.hbs",
        "outDir": "dist/src"
      },
      {
        "include": "**/*.svg",
        "outDir": "dist/src"
      },
      {
        "include": "**/*.png",
        "outDir": "dist/src"
      },
      {
        "include": "lang/**/*",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "typeFileNameSuffix": [
            ".input.ts",
            ".args.ts",
            ".entity.ts",
            ".model.ts",
            ".vm.ts"
          ],
          "dtoFileNameSuffix": [".dto.ts", ".entity.ts", ".im.ts", ".vm.ts"]
        }
      }
    ]
  }
}
